<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:layout_margin="8dp"
    app:contentPadding="5dp"
    android:focusable="true"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/text_view_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="5dp"
            android:textStyle="italic|bold"
            android:layout_toEndOf="@id/image_view_message"
            tools:text="Mpesa"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_message"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/text_view_sender"
            android:layout_marginStart="14dp"
            android:id="@+id/text_view_mpesaId"
            android:text="mpesaId"/>

        <ImageView
            android:id="@+id/image_view_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_message" />


        <TextView
            android:id="@+id/text_view_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_mpesaId"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="3dp"
            android:layout_toStartOf="@id/image_view_more"
            android:layout_toEndOf="@id/image_view_message"
            tools:text="mpesa message body" />


        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="14dp"
            android:ellipsize="end"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/image_view_message"
            android:textStyle="italic"
            tools:text="5:00pm" />

        <ImageView
            android:id="@+id/image_view_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_print" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>